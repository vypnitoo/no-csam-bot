# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Database Configuration
DATABASE_URL="file:./dev.db"

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_URL=http://localhost:3000
JWT_SECRET=your_random_jwt_secret_here_minimum_32_characters

# Detection API Configuration
# Cloudflare Worker (Deploy worker/ first, then use its URL)
WORKER_URL=https://your-worker.your-subdomain.workers.dev
WORKER_API_KEY=your_random_secure_api_key_here

# Alternative: Sightengine API (Optional)
SIGHTENGINE_API_USER=your_sightengine_api_user
SIGHTENGINE_API_SECRET=your_sightengine_api_secret

# Detection Configuration
ENABLE_ML_MODEL=false
DETECTION_THRESHOLD=0.85
REVIEW_THRESHOLD=0.70
MAX_CONCURRENT_SCANS=2
IMAGE_MAX_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=90

# Security
ENCRYPTION_KEY=your_random_encryption_key_minimum_32_characters

# Environment
NODE_ENV=development
